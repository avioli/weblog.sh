    <section id="install" class="contrast">
      <div class="cell">
        <header><h2>SETUP</h2></header>
        <!-- <p><a class="download" href="{{constants.downloadpath}}">Download Client ({{latest}})</a></p> -->
        <span class="comment"># TO AVOID TYPING THE PORT</span><br>
        <span class="prompt"></span>echo "Host weblog.sh" >> ~/.ssh/config<br>
        <span class="prompt"></span>echo "Port 2222" >> ~/.ssh/config<br>
        <br><a href="/~postmaster/config-defaults-for-easier-blogging-N1PRHW77x">Tips</a>
      </div>
    </section>

    <section id="usage" class="term">

      <header><h2>USAGE (use -p 2222 or do setup above)</h2></header>

      <p>
        <span class="comment"># REGISTRATION (you will be asked a password)</span><br>
        <span class="prompt"></span>ssh walt@weblog.sh
      </p>

      <p>
        <span class="comment"># SEND PUBLIC KEY (optional)</span><br>
        <span class="prompt"></span>ssh walt@weblog.sh key $(cat ~/.ssh/id_rsa.pub)
      </p>

      <hr>

      <p>
        <span class="comment"># CREATE OR EDIT POST, UPLOAD ON SAVE</span><br>
        <span class="prompt"></span>vim scp://walt@weblog.sh/file.<span class="red">(txt|md)</span>
      </p>

      <p>
        <span class="comment"># BROWSE &AMP; EDIT</span><br>
        <span class="prompt"></span>vim scp://walt@weblog.sh/<span class="red">(draft|public)</span>/<br>
      </p>

      <p>
        <span class="comment"># PUBLISH/UNPUBLISH ARTICLE</span><br>
        <span class="prompt"></span>ssh walt@weblog.sh <span class="red">[un]</span>publish file.txt<br>
      </p>

      <p>
        <span class="comment"># UPLOAD FROM FILE</span><br>
        <span class="prompt"></span>scp local.txt walt@weblog.sh:<span class="red">(draft|public)</span>/<br>
      </p>

      <p>
        <span class="comment"># DOWNLOAD TO FILE</span><br>
        <span class="prompt"></span>scp walt@weblog.sh:/file.txt local.txt<br>
      </p>

      <p>
        <span class="comment"># DELETE ARTICLE</span><br>
        <span class="prompt"></span>ssh walt@weblog.sh rm file.txt</code>
      </p>

